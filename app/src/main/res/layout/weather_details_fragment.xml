<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/weatherItems"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        layout="@layout/weather_items" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/weatherItems"
        app:layout_constraintStart_toStartOf="@+id/weatherItems"
        app:layout_constraintEnd_toEndOf="@+id/weatherItems"
        />


</androidx.constraintlayout.widget.ConstraintLayout>